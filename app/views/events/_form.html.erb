<div class="container">
<%= form_for @event do |f| %>
<% if @event.errors.any? %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-danger">
        <h3>Please correct this following errors:</h3>

          <ul>
            <% @event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-md-3" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %><br>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :event_date, class: "control-label col-md-3" %>
    <div class="col-md-8">
      <%= f.date_field :event_date, class: "form-control" %>
      <%= f.hidden_field :contact_id, value: params[:contact_id]%><br>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-8">
      <%= f.button 'Save', class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>
