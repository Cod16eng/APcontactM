<% if @noteattach.errors.any? %>

  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-danger">
        <h3>Please correct this following errors:</h3>

          <ul>
            <% @noteattach.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>

<% end %>
<%= simple_form_for(@noteattach) do |f| %>


  <div class="form-inputs">
    <%= f.input :name, label: "Name"%>
    <%= f.input :attach, label: "Attachment" %>

    <%= f.input :note_id, :as => :hidden, input_html: { value: params[:note_id] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
