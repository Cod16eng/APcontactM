<div class="container">
<%= form_for @task do |f| %>
<% if @task.errors.any? %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-danger">
        <h3>Please correct this following errors:</h3>

          <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :contact_name, class: "control-label col-md-3" %>
  <div class="col-md-8">
    <%= f.text_field :contact_name, class: "form-control" %><br>
  </div>
</div>
<div class="form-group">
  <%= f.label :task_date, class: "control-label col-md-3" %>
  <div class="col-md-8">
    <%= f.date_field :task_date, class: "form-control" %><br>
  </div>
</div>
<div class="form-group">
  <%= f.label :task_desc, class: "control-label col-md-3" %>
  <div class="col-md-8">
    <%= f.text_area :task_desc, class: "form-control" %><br>
  </div>
</div>
  <%= f.hidden_field :contact_id, value: params[:contact_id] %><br>

  <div class="form-group">
    <div class="col-md-offset-3 col-md-8">
      <%= f.button 'Save', class: "btn btn-success" %>
    </div>
  </div>
  
<% end %>
</div>
